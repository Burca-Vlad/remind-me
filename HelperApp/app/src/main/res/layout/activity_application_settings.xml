<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.helper.vladburca.helperapp.presenter.activity.GeneralSettingsActivity">

    <RelativeLayout
        android:id="@+id/app_icon_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/app_icon_large"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/remind_me_icon"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/persistent_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/app_icon_holder">

        <TextView
            android:id="@+id/monitored_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_settings_monitored_string"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"/>

        <Switch
            android:id="@+id/switch_monitor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/complex_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/persistent_holder">

        <TextView
            android:id="@+id/complex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_settings_ignore_string"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/ignore_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_settings_ignore_button_text"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
